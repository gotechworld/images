{
    "server": {
      "host": "0.0.0.0",
      "port": 3500,
      "app": {
        "appName": "hapi-cms-api",
        "releaseVersion": "1"
      },
      "router": {
        "isCaseSensitive": false,
        "stripTrailingSlash": true
      },
      "cache": [
        {
          "name": "redisCache",
          "provider": {
            "constructor": "",
            "options": {
              "partition": "cache",
              "host": "redis-master",
              "port": 6379
            }
          }
        }
      ],
      "debug": {
        "request": ["error"]
      }
    },
    "register": {
      "plugins": [
        "hapi-pino",
        "@hapi/inert",
        "@hapi/vision",
        "hapi-swagger",
        {
          "plugin": "hapi-alerto",
          "options": {
            "dsn": "http://42ab6aca7ae94093942d7736257f6e26@sentry-s1.altex.ro/20"
          }
        },
        {
          "plugin": "hapi-internal-bridge",
          "options": {
            "serviceName": "CMS_API",
            "serviceKey": "e6ae4359c969322316d4d17adf0f4ef30e3a1280",
            "cacheName": "redisCache",
            "cacheTTL": 120000,
            "imApiUrl": "https://im-api-s1.altex.ro"
          }
        },
        {
          "plugin": "hapi-panda-es",
          "options": {
            "connection": {
              "node": "http://82.79.61.139:2233",
              "version": 7
            },
            "logger": {
              "level": 10
            }
          }
        },
        {
          "plugin": "./plugins/content",
          "options": {
            "page": {
              "index": "pages",
